.faq
  padding 30px 0 0 0
  &-group
    margin-bottom 40px
    &-title
      font-size 1.5rem
      margin 0 0 20px 0
      padding 0
  &-item
    line-height 1.5
    margin-bottom 1.5rem
  &-question
    font-size 1rem
    font-weight 500
    margin 0 0 .625rem 0
  &-answer
    background #f0f0f0
    border-radius .625rem
    font-size 1rem
    font-weight 300
    margin 0
    padding .75rem 1rem
    p
      margin 0 0 .625rem 0
      &:last-child
        margin-bottom 0
    strong, b
      font-weight 700
