$responsive-min-size = $screen-size-md
$inverse-button-size = 3rem
$inverse-button-margins = .5rem
.converter
  text-align center
  margin-bottom 1.5rem
  .first &
    max-width 22rem
    margin-left auto
    margin-right auto
    margin-top 0
    
  @media (min-width $responsive-min-size)
    display flex
    .first &
      max-width none
      margin-left 0
      margin-right 0
      margin-top 3rem
      margin-bottom 1rem
  &-field
    position relative
    &-helper
      position absolute
      bottom 0
      left 0
      right 0
      margin-bottom -2rem
      @media (min-width $responsive-min-size)
        margin-bottom 0
        position relative
  &-direction
    @media (min-width $screen-size-md)
      flex 0 0 5rem
    > button
      position relative
      z-index 1
      @extend .reset-button
      display block
      height $inverse-size
      line-height 0
      margin $inverse-button-margins auto
      width @height
      transform rotate(90deg)
      //opacity .75
      @media (min-width $responsive-min-size)
        transform none
        margin 0 auto
      svg
        display none
        font-size 3rem
        fill #666
        .first &
          fill #fff
      &[data-direction='any']
        &:hover
          opacity 1
        svg[data-direction='any']
          display inline-block
      &[data-direction='fixed']
        cursor default
        svg[data-direction='fixed']
          display inline-block
      
  &-group
    margin-top ($inverse-button-size + $inverse-button-margins)
    @media (min-width $responsive-min-size)
      margin-top 0
      margin-left 1.5rem
      flex 0 0 15rem
    &-row
      @media (min-width $responsive-min-size)
        display flex
        align-items center
    &-col
      @media (min-width $responsive-min-size)
        &:first-child
          flex 0 0 10rem
        &:last-child
          margin-left 1rem
  &-save
    opacity 0
    font-size .75rem
    padding 1.25rem 0
    @media (min-width $responsive-min-size)
      padding 0
      text-align left
      width 105px
  &-more
    @extend .reset-button
    color #fff
    font-size: 0.75rem;
    font-weight: lighter;
    padding: 15px 0 0 10px;
    text-shadow: 0px 1px 1px rgba(0,0,0,0.4);
    //underline-dots @color
    opacity 0
    width 162px
    &:hover
      opacity .7
  @media (min-width $responsive-min-size)
    text-align center
    margin-top .75rem
    margin-left 0
    font-size .75rem
  