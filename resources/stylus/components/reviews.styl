$responsive-min-size = $screen-size-md
$item-margin-bottom = 4rem
.reviews
  color #252525
  
  &-slide
    position relative
    
   
    @media (min-width $screen-size-xs)  
      margin-bottom ($item-margin-bottom * -1)
    // padding 0 4rem
    &-left, &-right
      
      position absolute
      top 0
      z-index 1
      cursor pointer
      margin-bottom $item-margin-bottom
      bottom 0
      
      
      
      align-items center
      display none
      @media (min-width $screen-size-xs)
        display flex  
      svg
        display block
        margin auto 0
        // vertical-align middle
        fill #ddd
        font-size 4rem
      &:hover
        svg
          fill $primary-color
    &-left
      left ($item-margin-bottom * -.1)
      transform scale(-1, 1)
      @media (min-width $screen-size-lg)
        left ($item-margin-bottom * -1.4)
    &-right
      right ($item-margin-bottom * -.2)
      @media (min-width $screen-size-lg)
        right ($item-margin-bottom * -1.4)
      // display none
        
  // &-mobile
  //   @media (min-width $responsive-min-size)
  //     display none
  // &-desktop
  //   display none
  //   @media (min-width $responsive-min-size)
  //     display block
  &-visible-on-mobile
    height 0
    width 0
    opacity 0
    @media (min-width $responsive-min-size)
      display none
  &-group
    padding 0 $item-margin-bottom
    justify-content space-evenly
    @media (min-width $screen-size-lg)
      padding 0
      justify-content space-between
      > div
        flex-basis 47%
    display flex
    
    flex-wrap wrap
    > div
      flex-basis 45%
      
