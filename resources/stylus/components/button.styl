$btn-defult-color = $primary-color
.button
  background transparent
  border 0.125rem solid $btn-defult-color
  border-radius 1.2em
  box-sizing border-box
  color $btn-defult-color
  cursor pointer
  display inline-block
  font-size 1rem
  font-weight 500
  line-height 1.5
  outline none
  padding 0.375rem 1rem
  text-align center
  text-decoration none
  user-select none
  vertical-align middle
  white-space nowrap

  &.fill, &:hover:not(.fill)
    background $btn-defult-color
    color #fff
  &.fill:hover
    $default-hover = lightness($btn-defult-color, 45%)
    background $default-hover
    border-color $default-hover



  // secondary color
  &.secondary
    border-color $secondary-color
    color $secondary-color
  &.secondary.fill, &.secondary:hover:not(.fill)
    background $secondary-color
    color #fff
  &.secondary.fill:hover
    $secondary-hover = lightness($secondary-color, 35%)
    background $secondary-hover
    border-color $secondary-hover
    
  &.secondary.fill.gradient
    color #fff
    border-color transparent
    gradient(to top, #0ec01b, #13d822)
    &:hover
      transition width .5s ease, background-color .5s ease
      border-color transparent
      background #0ec01b
    
  .converter &
    display block
    width 100%
    // height 3.125rem
    padding 0.726rem 1rem .65rem
    border-radius 1.5em
    //box-shadow $first-screen-item-box-shadow
    

  &.block
    width 100%
  &.sm
    font-size .875rem
    font-weight 400
    padding .15rem .75rem
    
  & > span
    display none
    
  $responsive-min-size = $screen-size-sm
  &.responsive
    padding-left 0
    padding-right 0
    // font-size 2rem
    width 2.5em
    height @width
    @media (min-width $responsive-min-size)
      padding-left 1rem
      padding-right @padding-left
      width auto
      height @width

    > span
      display none
      @media (min-width $responsive-min-size)
        display inline
    > svg
      fill $primary-color
      font-size 1em
      vertical-align middle
      @media (min-width $responsive-min-size)
        display none
    
    > svg.svg-chevron-right
      margin-left .125rem
      margin-top -.125rem

    &.secondary > svg
      fill $secondary-color
      
    &:hover
      svg
        fill #fff


