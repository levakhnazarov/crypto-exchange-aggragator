$border-radius = .3125rem
$padding-top-bottom = 1.25rem
$padding-left-right = 1.5rem
$responsive-min-size = $screen-size-sm   
.dialog
  box-sizing border-box
  margin 0 auto
  // width 320px
  max-width 30rem
  // @media (min-width $responsive-min-size)
  //   max-width
  background #fff
  // height 2000px
  
  position relative
  z-index 1000
  // padding 1.25rem 1.5rem 2.25rem
  border-radius $border-radius
  box-shadow $invert-box-shadow
  transition all .25s linear
  // transition-delay .15s
  // padding 2.5rem
  top -100px
  transform translate(0,0)
  .show &
    top $container-padding
    @media (min-width $responsive-min-size)
      top 100px
  &-title
    font-size 1.5rem
    font-weight 500
    padding 0
    margin 0
  
  &-header
    display flex
    justify-content space-between
    padding $padding-top-bottom $padding-left-right 0
    // align-items basline

  &-header &-close
    @extend .reset-button
    font-size 1rem
    margin-right .2em
    line-height 0
    svg
      font-size 1em
    &:hover
      svg
        fill $primary-color
  // &-footer
    
  &-body
    padding $padding-top-bottom $padding-left-right

  &-footer-close
    @extend .reset-button
    // position absolute
    bottom 0
    left 0
    right 0
    border-top 1px solid #e9e9e9
    background #f7f7f7
    display block
    text-align center
    color $primary-color
    width 100%
    font-size 1rem
    line-height 1.5
    padding .469rem 0
    border-radius 0 0 $border-radius $border-radius
    @media (min-width $responsive-min-size)
      display none
    
  &-is-open
    position relative
    overflow hidden
  
  // Measure scrollbar width for padding body during modal show/hide
  &-scrollbar-measure
    position absolute
    top -9999px
    width 50px
    height 50px
    overflow scroll


  &-overlay
    // display none
    padding 0 $container-padding
    position fixed
    z-index 999
    top 0
    left 0
    right 0
    bottom 0
    transition background-color .25s linear
    // background rgba(#000, .25)
    background rgba($primary-color, .95)
    background rgba(#000, .25)
    @media (min-width $responsive-min-size)
      background rgba(#000, .25)
    
    overflow-y hidden
    
    visibility hidden
    opacity 0
    transition visibility 0s, opacity 0.25s linear, background-color .25s linear
    
    // transition-delay .15s
    &.show
      overflow-y scroll
      // transition-delay none  
      visibility visible
      opacity 1

