.paper
  color #252525
  background #fff
  @media (min-width $screen-size-md)
    box-shadow 0px 0px 30px 0px rgba(0,0,0,0.2)
  
  margin-left -($container-padding)
  margin-right @margin-left
  
  @media (min-width $screen-size-md)
    margin-left 0
    margin-right @margin-left

  &-main
    position relative
    @media (min-width $screen-size-md)
      margin-bottom 40px
    &:before
      display block
      position absolute
      z-index 1
      background #fff
      content ''
      height 1rem
      right 0
      left 0
      top -1rem
