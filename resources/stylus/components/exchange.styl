    //     outline none
    //     background transparent
    //     cursor pointer
    //     display none
    //     @media (min-width $summary-responsive-min-size)
    //       display inline-block
      
    &-text
      font-size .875rem
      line-height 1.5
      // font-size 1rem
      p
        padding 0
        margin 0
      strong, b
        font-weight 700

    // &-more .button
    //   font-weight 300
      
  &-qa
    padding 20px 0
    @media (min-width $screen-size-sm)
      padding 40px 0
    &-title
      font-size 1.875rem
      font-weight 700
      margin 0 0 20px 0
      padding 0

  &-offers
    &-table
      padding 40px 0 0 0
      .offers-table
        tr
          padding 0 $margins
        
        @media (min-width $screen-size-xs)
          td:first-child, th:first-child
            padding-left $margins !important
          td:last-child, th:last-child
            padding-right $margins !important
            
        @media (min-width $screen-size-sm)
          td:first-child, th:first-child
            padding-left $margins-md !important
          td:last-child, th:last-child
            padding-right $margins-md !important

        @media (min-width $screen-size-md)
          td:first-child, th:first-child
            padding-left $margins-lg !important
          td:last-child, th:last-child
            padding-right $margins-lg !important
        
    
 
    

        
